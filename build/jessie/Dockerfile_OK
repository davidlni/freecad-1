FROM izone/freecad:nvidia-jessie
MAINTAINER Leonardo Loures <luvres@hotmail.com>

## References:
# https://gist.github.com/berndhahnebach/38d5bfe73134928c0a1ad001a94df05f
# https://github.com/berndhahnebach/Netgen
# https://sourceforge.net/p/netgen-mesher/wiki/Home/
# https://aur.archlinux.org/packages
# http://www.boost.org/doc/libs/1_64_0/more/getting_started/unix-variants.html

ENV FREECAD=/opt/FreeCAD
ENV pack_dev=" \
		doxygen \
		libpyside-dev \
		libqtcore4 \
		libfreetype6-dev \
		libshiboken-dev \
		libxerces-c-dev \
		libxmu-dev \
		libxmu-headers \
		libxmu6 \
		libxmuu-dev \
		libxmuu1 \
		pyside-tools \
		python-pivy \
		python-dev \
		python-pyside \
		python-matplotlib \
		libqtwebkit-dev \
		swig "
ENV pack_build=" \
		dictionaries-common \
		qt4-dev-tools \
		qt4-qmake \
		g++ \
		tcl8.5-dev \
		tk8.5-dev \
		wget \
		automake \
		libhdf5-dev "

RUN \
	cd \
	&& mkdir -p $FREECAD \
  # Enable backports (cmake 3.6.2) "cmake 3.3 or higher" required by VTK 8
	&& echo 'deb http://deb.debian.org/debian jessie-backports main' \
									>/etc/apt/sources.list.d/backports.list \
	&& apt-get update \
	&& apt-get install -y \
		$pack_dev \
		$pack_build \
		git \
  # gmsh 2.11.0
	&& apt-get -t jessie-backports install -y \
		gmsh \
		cmake

### libMED 3.2.0
#----------------
RUN \
	MAKEDIR=med \
	&& cd \
	&& mkdir $MAKEDIR \
	&& cd $MAKEDIR \
	&& git clone https://github.com/luvres/libMED.git \
  \
  # building MED
	&& mkdir build \
	&& cd build \
  \
	&& cmake ../libMED \
		-DCMAKE_INSTALL_PREFIX:PATH=$FREECAD \
  \
	&& make -j$(nproc) \
	&& make install \
  # Clean
	&& cd && rm $MAKEDIR -fR 

### OCCT 7.1.0 -> libfreeimage-dev libfreeimage3 libtbb-dev libtbb2
#--------------
RUN \
	apt-get install -y \
		libfreeimage-dev \
		libtbb-dev \
	    libcoin80-dev \
	&& MAKEDIR=occt && \
	cd \
	&& mkdir $MAKEDIR \
	&& cd $MAKEDIR \
	&& git clone https://github.com/luvres/occt7.git \
	&& mkdir build \
	&& cd build \
  \
	&& cmake \
		../occt7 \
		-DCMAKE_INSTALL_PREFIX:PATH=$FREECAD \
		-DUSE_VTK:BOOL=OFF \
		-DUSE_TBB:BOOL=ON \
		-DUSE_FREEIMAGE:BOOL=ON \
		-DCMAKE_BUILD_TYPE=Release \
  \
	&& make -j$(nproc) \
	&& make install \
  \
  # Clean
	&& cd && rm $MAKEDIR -fR \
	&& apt-get remove -y \
		libfreeimage-dev \
		libtbb-dev \
	    libcoin80-dev \
	&& apt-get autoremove -y \
	&& apt-get install -y \
		libfreeimage3 \
		libtbb2

### Netgen 5.3.1
#----------------
RUN \
	apt-get install -y \
		openmpi-bin \
		libopenmpi-dev \
		libtogl-dev \
  \
	&& cd \
	&& git clone https://github.com/luvres/netgen.git \
	&& cd netgen \
  \
	# building Netgen
	&& ./configure \
		--prefix=$FREECAD \
		--enable-occ \
		--with-occ=$FREECAD \
		--with-tcl=/usr/lib/tcl8.5 \
		--with-tk=/usr/lib/tk8.5 \
		--with-togl=/usr/lib/ \
		--enable-shared \
		--enable-nglib \
		--disable-gui \
		--disable-dependency-tracking \
		CXXFLAGS="-DNGLIB_EXPORTS -std=gnu++11" \
  \
	&& make -j$(nproc) \
	&& make install \
  \
	&& cp -fR libsrc $FREECAD/libsrc \
  \
  # Clean
	&& cd && rm netgen -fR  

### Eigen 3.3.4
#---------------
# http://eigen.tuxfamily.org/index.php?title=Main_Page
RUN \
	eigen_VERSION=3.3.4 \
  \
	&& MAKEDIR=eigen \
	&& cd \
	&& mkdir $MAKEDIR \
	&& cd $MAKEDIR \
	&& wget -c http://bitbucket.org/eigen/eigen/get/${eigen_VERSION}.tar.gz \
	&& tar zxf ${eigen_VERSION}.tar.gz \
	&& rm ${eigen_VERSION}.tar.gz \
	&& mv eigen-* eigen-${eigen_VERSION} \
	&& mkdir build \
	&& cd build \
  \
    && cmake ../eigen-${eigen_VERSION} \
        -DCMAKE_INSTALL_PREFIX=$FREECAD \
        -DCMAKE_C_FLAGS_RELEASE=-DNDEBUG \
        -DCMAKE_CXX_FLAGS_RELEASE=-DNDEBUG \
        -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_VERBOSE_MAKEFILE=ON \
  \
    && make install \
  # Clean
	&& cd && rm $MAKEDIR -fR 

### VTK 8.0.0
#-------------
RUN \
	vtk_VERSION_MAJOR=8.0 && \
	vtk_VERSION_MINOR=8.0.0 && \
  \
	MAKEDIR=vtk && \
	cd \
	&& mkdir $MAKEDIR \
	&& cd $MAKEDIR \
	&& wget http://www.vtk.org/files/release/${vtk_VERSION_MAJOR}/VTK-${vtk_VERSION_MINOR}.tar.gz \
	&& gunzip VTK-${vtk_VERSION_MINOR}.tar.gz \
	&& tar xf VTK-${vtk_VERSION_MINOR}.tar \
	&& rm VTK-${vtk_VERSION_MINOR}.tar \
  # building VTK
	&& mkdir build \
	&& cd build \
  \
	&& cmake ../VTK-${vtk_VERSION_MINOR} \
			-DCMAKE_INSTALL_PREFIX:PATH=$FREECAD \
			-DVTK_Group_Rendering:BOOL=OFF \
			-DVTK_Group_StandAlone:BOOL=ON \
			-DVTK_RENDERING_BACKEND=None \
  \
	&& make -j$(nproc) \
	&& make install \
  # Clean
	&& cd && rm $MAKEDIR -fR
  

### FreeCAD latest Github commit
#--------------------------------
RUN \
  # libBoost-dev 1.55
	libboost_dev=" \
		libboost-filesystem1.55-dev \
		libboost-program-options1.55-dev \
		libboost-python1.55-dev \
		libboost-regex1.55-dev \
		libboost-signals1.55-dev \
		libboost-system1.55-dev \
		libboost-thread1.55-dev " \
	&& apt-get install -y $libboost_dev libcoin80-dev \
  \
  # get FreeCAD
	&& cd \
	&& git clone https://github.com/FreeCAD/FreeCAD \
  \
  # building FreeCAD
	&& cd \
	&& mkdir build \
	&& cd build \
  \
	&& cmake ../FreeCAD \
			-DCMAKE_INSTALL_PREFIX:PATH=$FREECAD \
			-DOCC_INCLUDE_DIR=$FREECAD/include/opencascade \
			-DNETGEN_ROOT=$FREECAD \
			-DBUILD_FEM_NETGEN=ON \
  \
  # Make FreeCAD
	&& cd \
	&& cd build \
	&& make -j$(nproc) \
  \
  # Install FreeCAD
	&& cd \
	&& cd build \
	&& make install \
  # Clean
	&& cd && rm FreeCAD/ build/ -fR \
  \
  # libBoost 1.55
	&& apt-get remove -y $libboost_dev libcoin80-dev \
  \
	&& apt-get autoremove -y \
	&& apt-get install -y \
		libboost-atomic1.55.0 \
		libboost-chrono1.55.0 \
		libboost-filesystem1.55.0 \
		libboost-program-options1.55.0 \
		libboost-python1.55.0 \
		libboost-regex1.55.0 \
		libboost-signals1.55.0 \
		libboost-system1.55.0 \
		libboost-thread1.55.0 \
		libboost-date-time1.55.0 \
		libboost-serialization1.55.0 \
		libhdf5-8



